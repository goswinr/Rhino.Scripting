
<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>  
    <AssemblyName>Rhino.Scripting</AssemblyName>   

    <!--assembly info -->
    <Version>0.0.0.1</Version>
    <Authors>Goswin Rothenthal</Authors>
    <Company>Studio Rothenthal</Company>
    <Product>Rhino.Scripting</Product>
    <PackageId>Rhino.Scripting</PackageId>
    <AssemblyVersion>0.0.0.1</AssemblyVersion>
    <FileVersion>0.0.0.1</FileVersion>
    <NeutralLanguage>en</NeutralLanguage>
    <Description>Rhino Script Syntax for F# and C#</Description>
    <Copyright>Copyright: Goswin Rothenthal 2019 </Copyright>
    <PackageLicenseUrl>License URL?</PackageLicenseUrl>
    <PackageProjectUrl>Project URL?</PackageProjectUrl>
    <PackageIconUrl>Icon URL?</PackageIconUrl>
    <RepositoryUrl>Repo URL?</RepositoryUrl>
    <RepositoryType>Repo type?</RepositoryType>
    <PackageTags>Tags?</PackageTags>
    <PackageReleaseNotes>Release?</PackageReleaseNotes>
  </PropertyGroup>
  
  <ItemGroup>    
    <Compile Include="01_Util.fs" />
    <Compile Include="02_TypeExtensions.fs" />
    <Compile Include="09_ActiveDoc.fs" />
    <Compile Include="50_RhinoScriptingSyntax.fs" />
    <Compile Include="Application.fs" />
    <Compile Include="Block.fs" />
    <Compile Include="Curve.fs" />
    <Compile Include="Dimension.fs" />
    <Compile Include="Document.fs" />
    <Compile Include="Geometry.fs" />
    <Compile Include="Grips.fs" />
    <Compile Include="Group.fs" />
    <Compile Include="Hatch.fs" />
    <Compile Include="Layer.fs" />
    <Compile Include="Light.fs" />
    <Compile Include="Line.fs" />
    <Compile Include="Linetype.fs" />
    <Compile Include="Material.fs" />
    <Compile Include="Mesh.fs" />
    <Compile Include="Object.fs" />
    <Compile Include="Plane.fs" />
    <Compile Include="Pointvector.fs" />
    <Compile Include="Selection.fs" />
    <Compile Include="Surface.fs" />
    <Compile Include="Toolbar.fs" />
    <Compile Include="Transformation.fs" />
    <Compile Include="Userdata.fs" />
    <Compile Include="Userinterface.fs" />
    <Compile Include="Utility.fs" />
    <Compile Include="View.fs" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="RhinoCommon">
      <HintPath>C:\Program Files\Rhino 6\System\RhinoCommon.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="4.7.0" />
  </ItemGroup>

  <!-- remove localization files: https://github.com/dotnet/fsharp/issues/6759 -->
  <AllowedReferenceRelatedFileExtensions>
    .mdb
    .pdb
  </AllowedReferenceRelatedFileExtensions>

  <Target Name="AfterBuild">
    <ItemGroup>
      <FSharpCoreResourcesFiles Include="$(OutputPath)**\FSharp.Core.resources.dll" />
      <FSharpCoreResourcesDirs Include="@(FSharpCoreResourcesFiles-&gt;'\%(Directory)') " />
    </ItemGroup>
    <RemoveDir Directories="@(FSharpCoreResourcesDirs)" />
</Target>

</Project>